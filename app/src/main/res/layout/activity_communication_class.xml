<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steam.myapplication.CommunicationClass">

    <EditText
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:id="@+id/roomnumber"
        android:hint="Room Number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="113dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        android:maxLength="4"
        />
    <Button
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:text="Submit Problem"
        android:onClick="writeMessage"
        android:layout_gravity="center"
        android:id="@+id/submitproblem"
        android:layout_marginTop="359dp"
        app:layout_constraintTop_toBottomOf="@+id/roomnumber"
        android:layout_marginLeft="186dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:layout_width="153dp"
        android:layout_height="47dp"
        android:text="Check Feedback"
        android:onClick="checkfeedback"
        android:layout_gravity="center"
        android:id="@+id/chkfeedback"
        android:layout_marginTop="359dp"
        app:layout_constraintTop_toBottomOf="@+id/roomnumber"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteY="511dp" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/problem"
        android:hint="Problem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="183dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        android:maxLength="200"/>
    <EditText
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:id="@+id/fullname"
        android:hint="Full Name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        tools:layout_editor_absoluteY="60dp"
        android:maxLength="20"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/urgency"
        android:onClick="writeMessage"
        android:hint="Urgency(ASAP or whenever possible)"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="426dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        android:maxLength="17"
        />














</android.support.constraint.ConstraintLayout>
