<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steam.myapplication.Chat">

    <ImageView
        android:id="@+id/personicon"
        android:src="@drawable/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintVertical_bias="0.043"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <ImageButton
        android:id="@+id/sendIcon"
        android:onClick="sendMessage"
        android:src="@drawable/ic_launcher1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintVertical_bias="0.984"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:text="John Smith"
        android:layout_width="259dp"
        android:layout_height="51dp"
        android:textSize="40sp"
        android:layout_toRightOf="@+id/personicon"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/personicon"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintVertical_bias="0.044"
        android:id="@+id/textView4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"
        android:textColor="#808080"/>
    <EditText
        android:id="@+id/enter"
        android:layout_width="273dp"
        android:layout_height="49dp"
        android:hint="Enter a Message"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintVertical_bias="0.984"
        android:maxLength="200"/>
    <TextView
        android:layout_width="225dp"
        android:layout_height="85dp"
        android:id="@+id/readtextfile1"
        android:text="Hi John, what is the problem?"
        android:gravity="center"
        android:textSize="20dp"
        android:scrollbars="vertical"
        android:layout_weight="1"
        android:layout_marginRight="103dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.309"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteY="153dp" />
    <TextView
        android:layout_width="229dp"
        android:layout_height="84dp"
        android:id="@+id/response"
        android:text="My Smart Board is not working in my classroom"
        android:gravity="center"
        android:textSize="20dp"
        android:scrollbars="vertical"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="91dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.467"
        android:textColor="#FFFFFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteY="226dp"
        tools:layout_editor_absoluteX="147dp" />

</android.support.constraint.ConstraintLayout>
